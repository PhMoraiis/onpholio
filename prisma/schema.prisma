generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Project {
  id            String        @id @default(cuid())
  title         String
  description   String
  imagesDesktop String[]
  imagesMobile  String[]
  href          String
  order         Int           @default(autoincrement())
  status        Stats
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  techs         ProjectTech[]

  @@map("projects")
}

model Tech {
  id        String        @id @default(cuid())
  name      String
  image     String?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  projects  ProjectTech[]

  @@map("techs")
}

model ProjectTech {
  id        String  @id @default(cuid())
  project   Project @relation(fields: [projectId], references: [id])
  projectId String
  tech      Tech    @relation(fields: [techId], references: [id])
  techId    String
  order     Int

  @@unique([projectId, techId])
  @@map("project_techs")
}

enum Stats {
  ONLINE
  DEVELOPMENT
  INTERRUPTED

  @@map("stats")
}

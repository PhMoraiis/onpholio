generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  href        String
  status      Stats
  order       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  techs       Tech[]
  images      Image[]

  @@map("projects")
}

model Tech {
  id        String    @id @default(cuid())
  name      String
  image     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  projects  Project[]

  @@map("techs")
}

model Image {
  id        String     @id @default(cuid())
  url       String
  theme     ImageTheme
  size      ImageSize
  project   Project    @relation(fields: [projectId], references: [id])
  projectId String

  @@map("images")
}

enum ImageTheme {
  LIGHT
  DARK

  @@map("image_themes")
}

enum ImageSize {
  DESKTOP
  MOBILE

  @@map("image_sizes")
}

enum Stats {
  ONLINE
  DESENVOLVIMENTO
  INTERROMPIDO

  @@map("stats")
}
